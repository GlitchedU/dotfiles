#################
### Shortcuts ###
#################

#  --Sounds--
# Mute
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle; exec pkill -RTMIN+1 i3blocks; exec notify-send "/" -t 100
# Lower
bindsym XF86AudioLowerVolume exec pactl set-sink-mute 0 false; exec pactl set-sink-volume 0 -2%; exec pkill -RTMIN+1 i3blocks; exec notify-send "-" -t 100
# Raise
bindsym XF86AudioRaiseVolume exec pactl set-sink-mute 0 false; exec pactl set-sink-volume 0 +2%; exec pkill -RTMIN+1 i3blocks; exec notify-send "+" -t 100

#  --Brightness--
# Raise
bindsym XF86MonBrightnessUp exec xbacklight -inc 2
# Lower
bindsym XF86MonBrightnessDown exec xbacklight -dec 2

# Cmus pause/play
bindsym XF86AudioPlay exec cmus-remote -u

# Moviemode
bindsym $sup+shift+m floating toggle; move position 960 px 24 px; resize set 640 px 360 px; sticky toggle

# Netflix
bindsym $sup+m exec google-chrome-stable --app=https://netflix.com

# Lock
bindsym $sup+x exec lock

# Qutebrowser
bindsym $sup+u exec qutebrowser
bindsym $sup+shift+u workspace $workspace4; exec qutebrowser

# Rofi
bindsym $sup+d exec rofi -show run



